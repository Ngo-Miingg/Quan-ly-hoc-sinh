@model Student_Management.Models.Giaovien

@{
    ViewData["Title"] = ViewData["Title"] ?? "Chỉnh sửa Giáo viên";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@(Model.MaGv == 0 ? "Create" : "Edit")" method="post">
    @if (Model.MaGv != 0)
    {
        <input type="hidden" asp-for="MaGv" />
    }

    <div class="form-group">
        <label asp-for="HoTen"></label>
        <input asp-for="HoTen" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NgaySinh"></label>
        <input asp-for="NgaySinh" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="GioiTinh"></label>
        <select asp-for="GioiTinh" class="form-control">
            <option>Nam</option>
            <option>Nữ</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="DiaChi"></label>
        <input asp-for="DiaChi" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Sdt"></label>
        <input asp-for="Sdt" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Môn giảng dạy</label>
        <select asp-for="MaMonHoc" class="form-control" asp-items="@(new SelectList(ViewBag.MonHocList, "MaMonHoc", "TenMonHoc"))">
            <option value="">-- Chọn môn học --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Lớp chủ nhiệm</label>
        <select name="LopChuNhiemId" class="form-control" asp-items="@(new SelectList(ViewBag.LopList, "MaLop", "TenLop", ViewBag.LopChuNhiemId))">
            <option value="">-- Không chọn --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
