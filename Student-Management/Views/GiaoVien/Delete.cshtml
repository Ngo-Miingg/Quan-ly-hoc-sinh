@model Student_Management.Models.Giaovien

@{
    ViewData["Title"] = "Xóa Giáo viên";
}

<h2>Bạn có chắc chắn muốn xóa @Model.HoTen?</h2>

<div class="alert alert-danger">
    <p><strong>Mã GV:</strong> @Model.MaGv</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>SĐT:</strong> @Model.Sdt</p>
    <p><strong>Môn dạy:</strong> @Model.MaMonHocNavigation?.TenMonHoc</p>
    <p><strong>Lớp chủ nhiệm:</strong> @(Model.Lops.FirstOrDefault()?.TenLop ?? "—")</p>
</div>

<h4>Lịch dạy</h4>
@if (Model.Lichhocs.Any())
{
    <table class="table table-bordered">
        <tr><th>Môn</th><th>Lớp</th><th>Thứ</th><th>Tiết</th></tr>
        @foreach (var lich in Model.Lichhocs)
        {
            <tr>
                <td>@lich.MaMonHocNavigation?.TenMonHoc</td>
                <td>@lich.MaLopNavigation?.TenLop</td>
                <td>@lich.ThuTrongTuan</td>
                <td>@lich.TietHoc</td>
            </tr>
        }
    </table>
}
else
{
    <p>Không có lịch dạy</p>
}

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MaGv" />
    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
