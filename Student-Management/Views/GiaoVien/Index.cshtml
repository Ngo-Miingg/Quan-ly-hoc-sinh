@model IEnumerable<Student_Management.Models.Giaovien>

@{
    ViewData["Title"] = "Danh sách Giáo viên";
}

<h2>Danh sách Giáo viên</h2>

<p>
    <a asp-action="Create" class="btn btn-success">+ Thêm mới</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Họ tên</th>
            <th>Email</th>
            <th>SĐT</th>
            <th>Môn giảng dạy</th>
            <th>Lớp chủ nhiệm</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var gv in Model)
        {
            var lopChuNhiem = gv.Lops.FirstOrDefault();
            <tr>
                <td>@gv.HoTen</td>
                <td>@gv.Email</td>
                <td>@gv.Sdt</td>
                <td>@gv.MaMonHocNavigation?.TenMonHoc</td>
                <td>@(lopChuNhiem != null ? lopChuNhiem.TenLop : "—")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@gv.MaGv">Chi tiết</a> |
                    <a asp-action="Edit" asp-route-id="@gv.MaGv">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@gv.MaGv">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
