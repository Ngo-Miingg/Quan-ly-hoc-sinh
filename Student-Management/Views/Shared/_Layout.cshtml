@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = ViewData["Title"] ?? "Student_Management";
    var username = Context.Session.GetString("Username");
    var role = Context.Session.GetString("Role");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student_Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Student_Management.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Student_Management</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>

                        @if (!string.IsNullOrEmpty(role))
                        {
                            switch (role)
                            {
                                case "Admin":
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">Quản lý Admin</a>
                                    </li>
                                    break;
                                case "GiaoVien":
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="GiaoVien" asp-action="Index">Quản lý Giáo viên</a>
                                    </li>
                                    break;
                                case "HocSinh":
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="HocSinh" asp-action="Index">Quản lý Học sinh</a>
                                    </li>
                                    break;
                            }

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="ChangePassword">Đổi mật khẩu</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Logout">Đăng xuất (@username)</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Register">Đăng ký</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="ForgotPassword">Quên mật khẩu</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Student_Management
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
