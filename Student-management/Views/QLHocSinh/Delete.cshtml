@model Student_Management.Models.Hocsinh

@{
    ViewData["Title"] = "Xóa học sinh";
}

<h2>@ViewData["Title"]</h2>

<h3>Bạn có chắc chắn muốn xóa học sinh này không?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Họ tên</dt>
        <dd class="col-sm-10">@Model.HoTen</dd>

        <dt class="col-sm-2">Lớp</dt>
        <dd class="col-sm-10">@Model.MaLopNavigation?.TenLop</dd>

        <dt class="col-sm-2">Trạng thái</dt>
        <dd class="col-sm-10">@Model.TrangThai</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MaHs" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
