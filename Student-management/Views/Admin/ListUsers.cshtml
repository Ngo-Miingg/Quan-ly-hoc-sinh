@model IEnumerable<Student_management.Models.NguoiDung>
@using System.Linq

@{
    ViewData["Title"] = "Danh sách người dùng";
}

<h1>Danh sách người dùng</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<p>
    <a asp-controller="Admin" asp-action="CreateUser" class="btn btn-primary">Tạo tài khoản mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Họ và tên</th>
            <th>Tên đăng nhập</th>
            <th>Email</th>
            <th>Vai trò</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.HoTen</td>
                <td>@user.TaiKhoan?.TenDangNhap</td>
                <td>@user.Email</td>
                <td>@user.TaiKhoan?.MaVaiTroNavigation?.TenVaiTro</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.MaNguoiDung">Sửa</a> |
                    <a asp-action="DeleteUser" asp-route-id="@user.MaNguoiDung">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>