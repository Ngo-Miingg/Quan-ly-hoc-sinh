@model Student_management.Models.Lop

@{
    ViewData["Title"] = "Thêm Lớp học mới";
}

<h1>Thêm Lớp học mới</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateClassroom" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenLop" class="control-label"></label>
                <input asp-for="TenLop" class="form-control" />
                <span asp-validation-for="TenLop" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNamHoc" class="control-label"></label>
                <select asp-for="MaNamHoc" class="form-control" asp-items="@(new SelectList(ViewBag.NamHocs, "MaNamHoc", "TenNamHoc"))"></select>
                <span asp-validation-for="MaNamHoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaGvcn" class="control-label">Giáo viên Chủ nhiệm</label>
                <select asp-for="MaGvcn" class="form-control" asp-items="@(new SelectList(ViewBag.GiaoViens, "MaGv", "MaNguoiDungNavigation.HoTen"))"></select>
                <span asp-validation-for="MaGvcn" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Tạo</button>
                <a asp-action="Classroom" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}