@model Student_Management.Models.Lop
@{
    ViewData["Title"] = "Danh sách Học sinh Lớp " + Model.TenLopHoc;
}

<h1>@ViewData["Title"]</h1>
<p>
    @* Nút này sẽ dẫn đến form tạo học sinh mới cho lớp hiện tại *@
    <a asp-action="Create" asp-route-lopId="@Model.MaLopHoc" class="btn btn-primary">Thêm Học sinh mới</a>
</p>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Họ và Tên</th>
                    <th>Ngày Sinh</th>
                    <th>Giới Tính</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hs in Model.HocSinhs)
                {
                    <tr>
                        <td>@hs.HoTen</td>
                        <td>@hs.NgaySinh?.ToString("dd/MM/yyyy")</td>
                        <td>@hs.GioiTinh</td>
                        <td>@hs.Email</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@hs.MaHocSinh">Sửa</a> |
                            <a asp-action="Details" asp-route-id="@hs.MaHocSinh">Chi tiết</a> |
                            <a asp-action="Delete" asp-route-id="@hs.MaHocSinh">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Index">Quay lại trang chọn lớp</a>
</div>