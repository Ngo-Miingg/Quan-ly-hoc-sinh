@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt Lại Mật Khẩu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h1 class="h3 mb-3 fw-normal">@ViewData["Title"]</h1>
                        <p class="text-muted">Một mã PIN đã được gửi đến email <strong>@Model.Email</strong>. Vui lòng nhập mã PIN và mật khẩu mới.</p>
                    </div>

                    <form asp-action="ResetPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        @* Thêm input ẩn để gửi lại email *@
                        <input type="hidden" asp-for="Email" />

                        <div class="form-floating mb-3">
                            <input asp-for="Pin" class="form-control" placeholder="Mã PIN" required />
                            <label asp-for="Pin"></label>
                            <span asp-validation-for="Pin" class="text-danger small"></span>
                        </div>
                        <hr />
                        <div class="form-floating mb-3">
                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="Mật khẩu mới" required />
                            <label asp-for="NewPassword"></label>
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Xác nhận mật khẩu" required />
                            <label asp-for="ConfirmPassword"></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="w-100 btn btn-lg btn-primary">Xác nhận</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>