@model CreateUserViewModel
@{
    ViewData["Title"] = "Tạo Người Dùng Mới";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h4>Thông tin cá nhân</h4>
            @* ... Các trường input cho HoTen, NgaySinh, Email, GioiTinh ... *@

            <h4 class="mt-4">Thông tin tài khoản và vai trò</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="VaiTro" class="form-label"></label>
                    <select asp-for="VaiTro" class="form-select" id="roleSelect">
                        <option value="">-- Chọn vai trò --</option>
                        <option value="HocSinh">Học Sinh</option>
                        <option value="GiaoVien">Giáo Viên</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3" id="lopHocDropdown" style="display:none;">
                    <label asp-for="MaLopHoc" class="form-label"></label>
                    <select asp-for="MaLopHoc" class="form-select" asp-items="ViewBag.LopHocList">
                        <option value="">-- Chọn lớp học --</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Tạo</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const roleSelect = document.getElementById('roleSelect');
            const lopHocDiv = document.getElementById('lopHocDropdown');
            function toggleLopHoc() {
                lopHocDiv.style.display = roleSelect.value === 'HocSinh' ? 'block' : 'none';
            }
            roleSelect.addEventListener('change', toggleLopHoc);
            toggleLopHoc(); // Chạy ngay khi tải trang
        });
    </script>
}