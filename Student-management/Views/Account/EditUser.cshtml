@model EditUserViewModel
@{
    ViewData["Title"] = "Chỉnh sửa Người dùng";
}

<h1>@ViewData["Title"]</h1>
<h4>Tài khoản: @Model.TenDangNhap</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="EditUser">
            <input type="hidden" asp-for="MaTaiKhoan" />
            <input type="hidden" asp-for="VaiTro" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h4>Thông tin cá nhân</h4>
            @* Các trường thông tin cá nhân tương tự form CreateUser *@

            <h4 class="mt-4">Thông tin tài khoản</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="TenDangNhap" class="form-label"></label>
                    <input asp-for="TenDangNhap" class="form-control" />
                    <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="MatKhauMoi" class="form-label"></label>
                    <input asp-for="MatKhauMoi" class="form-control" type="password" />
                    <span asp-validation-for="MatKhauMoi" class="text-danger"></span>
                </div>
            </div>

            @if (Model.VaiTro == "HocSinh")
            {
                <div class="mb-3">
                    <label asp-for="MaLopHoc" class="form-label"></label>
                    <select asp-for="MaLopHoc" class="form-select" asp-items="ViewBag.LopHocList"></select>
                </div>
            }

            <div class="form-group mt-3">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                <a asp-action="ListUser" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>