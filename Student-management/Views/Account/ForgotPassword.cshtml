@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên Mật Khẩu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h1 class="h3 mb-3 fw-normal">@ViewData["Title"]</h1>
                        <p class="text-muted">Nhập email liên kết với tài khoản của bạn. Chúng tôi sẽ gửi một mã PIN để xác thực.</p>
                    </div>

                    <form asp-action="ForgotPassword" method="post">
                        @if (ViewBag.SuccessMessage != null)
                        {
                            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
                            <a asp-action="Login" class="btn btn-secondary w-100">Về trang đăng nhập</a>
                        }
                        else
                        {
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" placeholder="Email" autocomplete="email" required />
                                <label asp-for="Email"></label>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <button type="submit" class="w-100 btn btn-lg btn-primary">Gửi yêu cầu</button>

                            <div class="text-center mt-3">
                                <a asp-action="Login">Quay lại trang đăng nhập</a>
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>