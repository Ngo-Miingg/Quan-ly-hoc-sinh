@model LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        [Image of a simple school or book logo]
                        <h1 class="h3 mb-3 fw-normal">Đăng Nhập Hệ Thống</h1>
                    </div>

                    <form asp-controller="Account" asp-action="Login" method="post">

                        @* Hiển thị lỗi chung từ Controller (nếu có) *@
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.Error
                            </div>
                        }

                        <div class="form-floating mb-3">
                            <input asp-for="TenDangNhap" class="form-control" placeholder="Tên đăng nhập" autocomplete="username" required />
                            <label asp-for="TenDangNhap">Tên đăng nhập</label>
                            <span asp-validation-for="TenDangNhap" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="MatKhau" type="password" class="form-control" placeholder="Mật khẩu" autocomplete="current-password" required />
                            <label asp-for="MatKhau">Mật khẩu</label>
                            <span asp-validation-for="MatKhau" class="text-danger small"></span>
                        </div>

                        <button class="w-100 btn btn-lg btn-primary" type="submit">Đăng nhập</button>

                        <div class="text-center mt-3">
                            <a asp-action="ForgotPassword">Quên mật khẩu?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* CSS tùy chỉnh để trang login đẹp hơn */
    body {
        background-color: #f8f9fa;
    }
</style>