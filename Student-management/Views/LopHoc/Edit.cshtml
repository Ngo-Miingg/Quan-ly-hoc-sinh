@model Student_Management.Models.Lop

@{
    ViewData["Title"] = "Sửa thông tin lớp học";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.MaLopHoc) <!-- Giữ khóa chính -->

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.TenLopHoc)
                @Html.TextBoxFor(m => m.TenLopHoc, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.TenLopHoc, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.SiSo)
                @Html.TextBoxFor(m => m.SiSo, new { @class = "form-control", type = "number", min = "0" })
                @Html.ValidationMessageFor(m => m.SiSo, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.MaNamHoc, "Năm học")
                @Html.DropDownListFor(
                    m => m.MaNamHoc,
                    ViewBag.NamHocList as SelectList ?? new SelectList(Enumerable.Empty<object>()),
                    "Chọn năm học",
                    new { @class="form-control" }
                )
                @Html.ValidationMessageFor(m => m.MaNamHoc, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.MaGiaoVienChuNhiem, "Giáo viên chủ nhiệm")
                @Html.DropDownListFor(
                    m => m.MaGiaoVienChuNhiem,
                    ViewBag.GiaoVienList as SelectList ?? new SelectList(Enumerable.Empty<object>()),
                    "Chọn giáo viên",
                    new { @class="form-control" }
                )
                @Html.ValidationMessageFor(m => m.MaGiaoVienChuNhiem, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        }
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
