@model Student_Management.Models.Lop

@{
    ViewData["Title"] = "Tạo Lớp học Mới";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="TenLopHoc" class="form-label">Tên Lớp học</label>
                        <input asp-for="TenLopHoc" class="form-control" placeholder="Ví dụ: 10A1" />
                        <span asp-validation-for="TenLopHoc" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MaNamHoc" class="form-label">Năm học</label>
                        <select asp-for="MaNamHoc" class="form-select" asp-items="ViewBag.NamHocList">
                            <option value="">-- Vui lòng chọn năm học --</option>
                        </select>
                        <span asp-validation-for="MaNamHoc" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MaGiaoVienChuNhiem" class="form-label">Giáo viên Chủ nhiệm</label>
                        <select asp-for="MaGiaoVienChuNhiem" class="form-select" asp-items="ViewBag.GiaoVienList">
                            <option value="">-- Chọn giáo viên (có thể bỏ trống) --</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SiSo" class="form-label">Sĩ số dự kiến</label>
                        <input asp-for="SiSo" class="form-control" type="number" />
                        <span asp-validation-for="SiSo" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <input type="submit" value="Tạo Lớp" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}