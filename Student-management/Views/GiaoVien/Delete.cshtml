@model Student_Management.Models.GiaoVien

@{
    ViewData["Title"] = "Xóa giáo viên";
}

<h1>Xóa</h1>

<h3>Bạn có chắc chắn muốn xóa giáo viên này?</h3>
<div>
    <h4>Giáo viên: @Model.HoTen</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoTen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NgaySinh)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GioiTinh)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Môn học phụ trách
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MonHoc.TenMonHoc)
        </dd>
        <dt class="col-sm-2">
            Lớp chủ nhiệm
        </dt>
        <dd class="col-sm-10">
            @{
                var lopChuNhiem = Model.LopHocs.FirstOrDefault();
                if (lopChuNhiem != null)
                {
                    @Html.DisplayFor(model => lopChuNhiem.TenLopHoc)
                }
                else
                {
                    <span>(Chưa có)</span>
                }
            }
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaGiaoVien" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại danh sách</a>
    </form>
</div>